<mvc:View
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    controllerName="nextrackwms.nextrackwms.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <tnt:ToolPage id="mainpage">
        <tnt:header>
            <tnt:ToolHeader
                class="headerclass"
                height="40px"
            >
                <Button
                    id="sideNavigationToggleButton"
                    icon="sap-icon://menu2"
                    type="Transparent"
                    press=".onMenuButtonPress"
                />
                <Title text="NEXTRACK WMS" />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation
                id="sidecontent"
                expanded="true"
                itemSelect="onItemSelect"
                class="mySmallSideNav"
            >
                <tnt:NavigationList items="{NexTrackModel>/navigation}">
                    <tnt:NavigationListItem
                        text="{NexTrackModel>text}"
                        icon="{NexTrackModel>icon}"
                        key="{NexTrackModel>key}"
                        press=".onQuickActionPress"
                        expanded="{NexTrackModel>expanded}"
                        items="{
                path: 'NexTrackModel>children'
            }"
                        selectable="false"
                    >
                        <tnt:NavigationListItem
                            text="{NexTrackModel>text}"
                            icon="{NexTrackModel>icon}"
                            key="{NexTrackModel>key}"
                            press=".onQuickActionPress"
                        />
                    </tnt:NavigationListItem>
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <NavContainer id="maincontainer">
                <pages>
                    <Page
                        id="idCategoryMasterPage"
                        title="{config>/title}"
                        class="sapUiContentPadding"
                    >
                        <content>
                            <!-- <VBox
                                items="{config>/formFields}"
                                class="sapUiSmallMargin"
                            >
                                <HBox class="sapUiTinyMarginBottom">
                                    <VBox width="200px">
                                        <Label
                                            text="{config>label}"
                                            class="sapUiTinyMarginEnd"
                                        />
                                    </VBox>
                                    <VBox width="300px">
                                        <Input />
                                    </VBox>
                                </HBox>
                            </VBox> -->
                            <f:SimpleForm
                                id="idDynForm"
                                layout="ColumnLayout"
                            />
                            <HBox
                                class="sapUiSmallMarginTop"
                                justifyContent="Center"
                            >
                                <Button
                                    text="Cancel"
                                    press=".onCancelPress"
                                    class="sapUiSmallMarginEnd"
                                    type="Reject"
                                />
                                <Button
                                    text="Submit"
                                    press=".onSubmitPress"
                                    type="Accept"
                                />
                            </HBox>
                            <Table
                                id="idCategoryTable"
                                inset="false"
                                class="sapUiSmallMarginTop"
                            />
                        </content>
                    </Page>
                    <Page
                        id="idAssetCreationPage"
                        title="Asset Creation"
                    />
                    <Page
                        id="idGrnListPage"
                        title="{ReportingModel>/grnList/title}"
                        class="sapUiContentPadding"
                    >
                        <content>
                            <ScrollContainer
                                width="100%"
                                horizontal="true"
                                vertical="false"
                            >
                                <Table
                                    id="grnTable"
                                    items="{ReportingModel>/grnList/tableRows}"
                                >
                                    <columns>
                                        <Column>
                                            <Title text="Po Number" />
                                        </Column>
                                        <Column>
                                            <Title text="Item Code" />
                                        </Column>
                                        <Column>
                                            <Title text="Item Name" />
                                        </Column>
                                        <Column>
                                            <Title text="Item Category" />
                                        </Column>
                                        <Column>
                                            <Title text="Expected Qty." />
                                        </Column>
                                        <Column>
                                            <Title text="Received Qty." />
                                        </Column>
                                        <Column>
                                            <Title text="Received Date" />
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem>
                                            <cells>
                                                <Text
                                                    text="{ReportingModel>PoNumber}"
                                                    wrapping="false"
                                                />
                                                <Text
                                                    text="{ReportingModel>ItemCode}"
                                                />
                                                <Text
                                                    text="{ReportingModel>ItemName}"
                                                />
                                                <Text
                                                    text="{ReportingModel>ItemCategory}"
                                                />
                                                <Text
                                                    text="{ReportingModel>ExpectedQty}"
                                                />
                                                <Text
                                                    text="{ReportingModel>ReceivedQty}"
                                                />
                                                <Text
                                                    text="{ReportingModel>ReceivedDate}"
                                                    wrapping="false"
                                                    width="100%"
                                                />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </ScrollContainer>
                        </content>
                    </Page>
                    <Page
                        id="idAssetHistoryPage"
                        title="Asset/Item History"
                        class="sapUiContentPadding"
                    >
                        <content>
                            <f:SimpleForm editable="true">
                                <f:content>
                                    <Label text="Asset/Item" />

                                    <ComboBox selectedKey="Item" change=".onItemorAssetPress" width="150px">
                                        <core:Item
                                            key="Item"
                                            text="Item"
                                        />
                                        <core:Item
                                            key="Asset"
                                            text="Asset"
                                        />
                                    </ComboBox>
                                </f:content>
                            </f:SimpleForm>
                            <Table
                                id="idItemTable"
                                class="sapUiSmallMarginTop"
                                visible="true"
                            />
                            <Table
                                id="idAssetTable"
                                class="sapUiSmallMarginTop"
                                visible="false"
                                items="{ReportingModel>/assetTable/tableRows}"
                            >
                                <columns>
                                    <Column>
                                        <Text text="Asset Code" />
                                    </Column>
                                    <Column>
                                        <Text text="Asset Name" />
                                    </Column>
                                    <Column>
                                        <Text text="Asset Category" />
                                    </Column>
                                    <Column>
                                        <Text text="Brand" />
                                    </Column>
                                    <Column>
                                        <Text text="Model" />
                                    </Column>
                                    <Column>
                                        <Text text="Quantity" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text text="{ReportingModel>AssetCode}" />
                                            <Text text="{ReportingModel>AssetName}" />
                                            <Text text="{ReportingModel>AssetCategory}" />
                                            <Text text="{ReportingModel>Brand}" />
                                            <Text text="{ReportingModel>Model}" />
                                            <Text text="{ReportingModel>Quantity}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </content>
                    </Page>
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
